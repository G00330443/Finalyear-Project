<%include ../include/header.ejs%>
<%include ../include/header_usermanage.ejs%>
<td>
<div  style="width:900px; height:400px; margin:100px auto;background-image:url(../images/ccc.png);">
    <font style=" font-family: 'Pathway Gothic One';
											text-transform: uppercase;
											color: #272323;
											text-align: left;
											font-size: 13px;
											padding: 0;
											margin: 2px 0px 0px;
											font-weight: 200;">
	<table style="table-layout: fixed;" align="center" border="0"
		width="97%">
		<tbody>
			<tr>
				<h1 class="nav" align="center" nowrap="nowrap" width="90%">Personal Information</h1>
				<td align="right" width="10%">&nbsp;<a href="#bottom"><img
						src="" align="absmiddle" border="0"></a></td>
			</tr>
		</tbody>
	</table>

	<form method="post" name="register">
		<input type="hidden" name="action" value="modify" />
        
        <font style="font-weight:bold;font-style:italic;" size=3>
		<table align="center" cellpadding="4" cellspacing="100" width="97%" font>
			<tbody>

				<tr>
					<td  width="21%">Username :</td>
					<td ><input id="username" name="username" size="25"
						maxlength="25" type="text" readonly value="<%= username%>">
					</td>
				</tr>
                
				<tr>
					<td>Picture :</td>
					<td><img height="80" src="<%= userpicture%>"></img></td>
				</tr>
                
				<tr>
					<td >Phone Number:</td>
					<td ><input name="phone" type="text" id="phone"
						size="25" readonly value="<%= user[0].phoneNumber%>"></td>
				</tr>
				
				<tr>
					<td  valign="top">Delivery Address:</td>
					<td ><textarea readonly name="addr" cols="60" rows="5"
							id="addr" ><%= user[0].Address%></textarea></td>
				</tr>
			</tbody>
		</table>
		<br>
        </font>
	</form>
	</font>
</div>
</td>

<% include ../include/footer.ejs%>

